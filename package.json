{
  "name": "aws-messaging",
  "version": "0.1.0",
  "description": "AWS messaging wrapper for multicasting published messages to consumer groups",
  "main": "js/index.js",
  "typescript": {
    "definition": "index.d.ts"
  },
  "scripts": {
    "compile": "tsc -p tsconfig.json",
    "preinstall": "npm install autodts",
    "postinstall": "autodts link",
    "prepublish": "tsc && autodts generate",
    "test": "nyc mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheConnMan/aws-messaging.git"
  },
  "keywords": [
    "AWS",
    "SNS",
    "SQS",
    "messaging"
  ],
  "author": "TheConnMan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TheConnMan/aws-messaging/issues"
  },
  "homepage": "https://github.com/TheConnMan/aws-messaging#readme",
  "devDependencies": {
    "@lib/autodts-generator": "0.0.2",
    "@types/chai": "^3.5.2",
    "@types/mocha": "^2.2.41",
    "@types/sinon": "^2.2.2",
    "chai": "^4.0.0",
    "mocha": "^3.4.2",
    "nyc": "^10.3.2",
    "sinon": "^2.3.2",
    "ts-node": "^3.0.4",
    "typescript": "^2.3.3"
  },
  "dependencies": {
    "autodts": "0.0.6",
    "aws-sdk": "^2.58.0"
  },
  "nyc": {
    "include": [
      "ts/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
